<h1>Edit Recipe</h1>

<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name" id="name" name="name">Name</label>
  <input type="text" name="name" value="<%= @recipe.name %>">
  <label for="ingredients" name="ingredients">Ingredients</label>
  <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
  <label for="cook_time" name="cook_time">Cook Time</label>
  <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">
  <input type="submit" name="submit" value="submit">
</form>
